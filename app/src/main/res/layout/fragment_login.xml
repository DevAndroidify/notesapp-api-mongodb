<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#201A31"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Login"
        android:textColor="#E6E6E6"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:background="@drawable/button"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:textColor="#E6E6E6"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:hint="Enter Email"
        android:drawableStart="@drawable/emailsize"
     android:drawablePadding="5dp"
        android:padding="10dp"
        android:textColorHint="#E6E6E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/baseline_security_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:textColorHint="#E6E6E6"
        android:textColor="#E6E6E6"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginemail" />

    <Button
        android:id="@+id/loginsubmit"
        android:layout_width="219dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-light"
        android:text="Sign In"
        android:background="@drawable/roundbutton"

        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#0DF5E3"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="60dp"
        android:textColor="#E6E6E6"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="40dp"
        android:text="Create an Account"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/loginregister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginsubmit"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/loginregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textColor="#0DF5E3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/loginsubmit" />
</androidx.constraintlayout.widget.ConstraintLayout>